FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      dynamicMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dynamicFvMesh       dynamicOversetFvMesh; 

solver          multiSolidBodyMotionSolver;

multiSolidBodyMotionSolverCoeffs
{
    front
    {
        solidBodyMotionFunction sixDoFDynamicMotion; //rotatingMotion;
		
        patches         (ballIn);
		g               (0 -9.8 0); 
        innerDistance   0.07;
        outerDistance   0.1;
        centreOfMass    (2 -4 0.01 );
        mass            0.155;
        momentOfInertia ( 7.6e-5 7.6e-5 7.6e-5);
        velocity        ( 0 0 0 );
        rhoName         rhoInf;
        rho             rhoInf;
        rhoInf          1.0;
        accelerationRelaxation 1;// 0.8;
        accelerationDamping 1;//0.95;
        report          on;
        reportToFile    on;
        solver
        {
            type            CrankNicolson;
        }
        constraints
        {
            twoDmotionOnly
            {
                sixDoFRigidBodyMotionConstraint   plane;
                normal                            (0 0 1);
            }

            noRotation
            {
            sixDoFRigidBodyMotionConstraint   axis;
            axis                              (0 0 1);
            }


            anchor
            {
            sixDoFRigidBodyMotionConstraint   point;
			centreOfRotation                  (0 0 0);
            }



        }
        restraints
        {
        }

    }
}


